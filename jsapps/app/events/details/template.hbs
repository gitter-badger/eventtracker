<h3>{{event_name}}</h3>
<div class="form-group row">
  <div class="col-md-3">Date: </div>
  <div class="col-md-3">{{event_date}}</div>
</div>
<div class="form-group row">
  <div class="col-md-3">Participants: </div>
  <div class="col-md-3">{{#each participants}}{{this}},{{/each}}</div>
</div>
<div class="form-group row">
  <div class="col-md-offset-3 col-md-3">
    <button class="btn-primary" {{action 'edit'}}>Edit Event</button>
    <button class="btn-primary" {{action 'delete'}}>Delete Event</button>
  </div>
</div>
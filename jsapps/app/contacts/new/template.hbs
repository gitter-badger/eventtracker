<h3>{{title}}</h3>
<form class="form-horizontal">
  <div class="form-group">
    <div class="col-md-2 control-label">Name:</div>
    <div class="col-md-4">
      {{input value=contact_name class="form-control" placeholder="Contact Name"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-2 control-label">Email: </div>
    <div class="col-md-4">
      {{input value=email class="form-control" placeholder="Email"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-2 control-label">Gravatar: </div>
    <div class="col-md-4">
      {{input value=gravatar_email class="form-control" placeholder="Gravatar Url"}}
    </div>
  </div>  
  <div class="btn-toolbar col-md-offset-2">
    <button class="btn btn-primary" {{action 'saveRecord'}}>Add</button>
    <button class="btn btn-default" {{action 'goBack'}}>Cancel</button>
  </div>
</form>